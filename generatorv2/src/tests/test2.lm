pipeline {
	
	alphabet {
		floor f #907558; 
		wall * #A9A9A9;
		entrance  e #00FF00;
		exit  x #FF0000;
		pillar | #964B00;
	}	
	
	options {
		seed: 12;
		size: 5x5;
		tiletype: f;
	}
	
	module firstModule {
		rules {
			addWalls:
			fffff,
			fffff,
			fffff,
			fffff,
            fffff
			->
			*****,
			*fff*,
			*fff*,
            *fff*,
			*****;
			addEntrance: 
			*,
			f 
			->  
			e,
			f;
			addExit: 
			f* 
			-> 
			fx;
			addPillar:
			f
			-> 
			|;
			
		}
		
		recipe {
			addWalls;
			addEntrance;
			addExit;
			path = CreatePath(e,x);
			addPillar;
		}
		
		on exit constraint a: e == true;
		resolvable constraint b: path == true; 
		
	}
	
	
}

