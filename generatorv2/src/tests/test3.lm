pipeline {
	
	alphabet {
		floor f #907558; 
		wall * #A9A9A9;
		entrance  e #00FF00;
		exit  x #FF0000;
		water ~ #0000FF;
	}	
	
	options {
		seed: 10;
		size: 7x7;
		tiletype: f;
	}
	
	module firstModule {
		rules {
			addWalls:
			fffffff,
			fffffff,
			fffffff,
			fffffff,
			fffffff,
			fffffff,
			fffffff			
			->
			*******,
			*fffff*,
			*ffffF*,
			*fffff*,
			*fffff*,
			*fffff*,
			*******;
			addEntrance: 
			*,
			f 
			->  
			e,
			f;
			addExit: 
			f,
			* 
			-> 
			f,
			x;
			addWater:
			f,f,f,f
			-> 
			~,~,~,~;
			
		}
		
		recipe {
			addWalls;
			addEntrance;
			addExit;
			path = CreatePath(e,x);
			addWall;
		}
		
		on exit constraint a: e == true;
		resolvable constraint b: path == true; 
		
	}
	
	
}

