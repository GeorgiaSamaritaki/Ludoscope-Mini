module parsing::languages::model::AST

//////////////////////////////////////////////////////////////////////////////
//
// The AST used for parsing .mdl files.
// @brief        This file contains the data structure needed for imploding
//							 a parsed .mdl tree.
// @contributor  
// @date         
//
//////////////////////////////////////////////////////////////////////////////

import parsing::languages::model::Syntax;
import ParseTree;

//////////////////////////////////////////////////////////////////////////////
// APIs
//////////////////////////////////////////////////////////////////////////////

public parsing::languages::model::AST::Model implodeModel(Tree tree)
  = implode(#parsing::languages::model::AST::Model, tree);
  
public parsing::languages::model::AST::Model parseModelToAST(loc location)
= implodeModel(parseModel(location));

//////////////////////////////////////////////////////////////////////////////
// AST
//////////////////////////////////////////////////////////////////////////////
		
data Model
	= model(list[ModelType] modelType);
	
data ModelType
	= makePath(bool commented, str pointA, str pointB)
	| destroyPath(bool commented, str pointA, str pointB);
	