pipeline {
	alphabet{
		floor f #907558; 
		entrance e #FFFFFF;
		spawn s #C8A2C8;
		wall w #A9A9A9;
		grass g #00FF00;
		monster m #8B0000; 
	}
	options {
		seed: 12;
		size: 25x25;
		tiletype: f; 
	}
	module environment {
		rules {
		  addSpawn:
		    f -> s;
		}
		
		recipe {
		    level_entrance = addSpawn;
		}
		;
	}
	module the_place {
		rules {
		  addWalls:
			fffffffff,
			fffffffff,
			fffffffff,
			fffffffff,
			fffffffff,
			fffffffff,
			fffffffff
			->
			wwwwwwwww,
			wfffffffw,
			wfffffffw,
			wfffffffw,
			wfffffffw,
			wfffffffw,
			wwwwwwwww;
			addEntrance: 
			w,
			f 
			->  
			e,
			f;
		}
		recipe {
		    room = addWalls[notNextTo level_entrance]; 
			place_entrance = addEntrance[in room];
		    path = CreatePath(place_entrance,level_entrance);
		}
		;
	}
	module vault {
		rules {
		  addWalls:
			ffff,
			ffff,
			ffff
			->
			wwww,
			wffw,
			wwww;
			addEntrance: 
			wf -> ef;
		}
		recipe {
		    room = addWalls[in the_place]; 
			vault_entrance = addEntrance[in room];
			path1 = CreatePath(place_entrance,vault_entrance);
		}
        resolvable constraint inner_path: Intact(path1);
	}
	
	module antichamber {
		rules {
		  addGrass:
			f -> g;
			expandGrass:
			f,
			g 
			-> 
			g,
			g;
			expandGrass1:
			ff,
			gf -> 
			fg,
			gf;
			expandGrass2:
			fg -> gg;
			expandGrass3:
			gf -> gg;
			addMonster:
			g -> m;
		}
		
		recipe {
			addGrass[nextTo place_entrance > notIn the_place];
			expandGrass2;
			expandGrass3;
			expandGrass;
			expandGrass1;
			expandGrass3;
			expandGrass;
			expandGrass2;
			expandGrass;
			expandGrass3;
			expandGrass1;
			expandGrass2;
			expandGrass3;
			expandGrass2;			
			expandGrass;
			expandGrass1;
			expandGrass;
			expandGrass;
			expandGrass2;
			expandGrass;
			expandGrass1;
			expandGrass1;
			expandGrass;
			expandGrass2;
			addMonster[notNextTo place_entrance];
			addMonster[notNextTo place_entrance];
		}
		;
	}
	on exit constraint vault_in_place: vault in the_place;
    on exit constraint path_intact: Intact(path);
    
    handlers{
    	inner_path{
    		ReverseChangesByLastModule();
    		ExecuteModule(vault);
    	}
    }
}